# Database
DB_HOST=mysql
DB_PORT=3306
DB_NAME=move_acces
DB_USER=appuser
DB_PASSWORD=change_me_secure_password
DB_ROOT_PASSWORD=change_me_root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend API
APP_SECRET=change_me_long_random_secret_key_min_32_chars
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_HOURS=24
RATE_LIMIT_LOGIN_PER_MIN=5
RATE_LIMIT_API_PER_5MIN=100
